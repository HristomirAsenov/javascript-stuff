<section class="py-5" style="border:1px solid black;">
    <div style="padding: 2%;" class="container">
        <!-- Start and End point -->
        <div style="display: flex; width: 100%;">
            <div style="width: 50%;">
                <img style="display: block; margin: 0 auto; max-width: 100px;"
                    src="https://img.icons8.com/cotton/2x/worldwide-location.png" />
                <h5 style="display: block; margin: 0 auto; text-align: center; font-weight: bold;" class="mt-4">
                    {{tripp.startPoint}} - {{tripp.endPoint}}
                </h5>
            </div>
            <div style="text-align: center; width: 50%;">

                <img style="display: block; margin: 0 auto; max-width: 100px;"
                    src="data:image/png;base64," />
                <h5 style="display: block; margin: 0 auto; text-align: center; font-weight: bold;" class="mt-4">
                    {{tripp.date}} at {{ tripp.time }}</h5>
            </div>
        </div>

        <hr>

        <div style="text-align: center; width: 100%;">
            <img style="display: block; margin: 0 auto; max-width: 100px;"
                src="https://i-love-png.com/images/family-svg-clipart-white-3.png" />
            <h5 style="font-weight: bold;">SharedTripp Buddies</h5>
            {{#each tripp.buddies}}
            <span>{{ this.email }} </span>
            {{else}}
            <p>. . . . .</p>
            {{/each}}
            <p style="font-weight:bold;">{{ tripp.driver.email }}</p>
        </div>

        <hr>

        <div style="display: flex; border-radius: 5px;">
            <div style="width: 50%; display: flex;">
                <img style="max-width: 600px;" class="img-fluid rounded" src="{{tripp.carImage}}" alt="">
            </div>

            <div style="width: 50%; word-wrap: break-word; padding: 1%; ">
                <p style="width: 100%; word-wrap: break-word;" class="lead">{{ tripp.description }}</p>

                {{#if isTheDriver}}
                <a href="/tripp/close-tripp/{{ tripp._id }}" class="btn btn-danger">Close this tripp</a>
                {{else}}
                {{#if isAlreadyJoined}}
                <a class="btn btn-info">Already joined. Don't be late!</a>
                {{else}}
                {{#if isSeatsAvailable}}
                <a href="/tripp/join-tripp/{{ tripp._id }}" class="btn btn-info">Join now, [{{availableSeats}}] seats
                    left</a>
                {{else}}
                <a class="btn btn-secondary">No seats available [0]</a>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </div>

        <hr>

    </div>
</section>